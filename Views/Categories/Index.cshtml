                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">@category.Name</td>
                                            <td>@category.Description</td>
                                            <td>
                                                <span class="badge bg-info">@category.Teams.Count times</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning text-dark">@category.WorkoutCategories.Count workouts</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
