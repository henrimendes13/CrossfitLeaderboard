                            {
                                <span class="badge bg-warning text-dark">@Model.WorkoutCategories.Count workouts</span>
                                <small class="text-muted d-block">N√£o ser√° poss√≠vel excluir se houver workouts vinculados.</small>
                            }
                            else
                            {
