@model CrossfitLeaderboard.Entities.Team

@{
    ViewData["Title"] = "Editar Equipe";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 text-primary">ðŸ‘¥ Editar Equipe</h1>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Editar Equipe: @Model.Name</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TotalPoints" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Nome da Equipe</label>
                            <input asp-for="Name" class="form-control" placeholder="Ex: Equipe Alpha" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">Digite um nome Ãºnico para a equipe.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">Categoria</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                <option value="">Selecione uma categoria...</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                            <div class="form-text">Selecione a categoria Ã  qual esta equipe pertence.</div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Total de Pontos:</strong> @Model.TotalPoints pontos
                            <br>
                            <small>Os pontos sÃ£o calculados automaticamente baseado nos resultados dos workouts.</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Salvar AlteraÃ§Ãµes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 