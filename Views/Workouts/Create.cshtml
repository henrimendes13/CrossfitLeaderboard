@using CrossfitLeaderboard.Entities
@model CrossfitLeaderboard.Entities.Workout

@{
    ViewData["Title"] = "Novo Workout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 text-success">üí™ Novo Workout</h1>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Cadastrar Novo Workout</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Nome do Workout</label>
                            <input asp-for="Name" class="form-control" placeholder="Ex: AMRAP 10 min Burpees" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">Digite um nome √∫nico para o workout.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descri√ß√£o</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ex: AMRAP 10 minutos: Burpees"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Descreva o exerc√≠cio ou sequ√™ncia de exerc√≠cios.</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Type" class="form-label fw-bold">Tipo de Workout</label>
                                    <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<WorkoutType>()">
                                        <option value="">Selecione o tipo...</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                    <div class="form-text">
                                        <strong>Repeti√ß√µes:</strong> Maior n√∫mero = melhor posi√ß√£o<br>
                                        <strong>Tempo:</strong> Menor tempo = melhor posi√ß√£o<br>
                                        <strong>Peso:</strong> Maior peso = melhor posi√ß√£o
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Unit" class="form-label fw-bold">Unidade de Medida</label>
                                    <input asp-for="Unit" class="form-control" placeholder="Ex: reps, min:sec, kg" />
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                    <div class="form-text">Ex: reps, min:sec, kg, lbs, etc.</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Categorias</label>
                            <div class="form-text mb-2">Selecione as categorias para as quais este workout ser√° aplicado:</div>
                            
                            <div class="row">
                                <div class="col-12 mb-2">
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAllCategories()">
                                        <i class="fas fa-check-square"></i> Selecionar Todos
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="deselectAllCategories()">
                                        <i class="fas fa-square"></i> Desmarcar Todos
                                    </button>
                                </div>
                            </div>
                            
                            <div class="row">
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <div class="col-md-6 col-lg-4 mb-2">
                                        <div class="form-check">
                                            <input class="form-check-input category-checkbox" type="checkbox" 
                                                   name="categoryIds" value="@category.Id" id="category_@category.Id">
                                            <label class="form-check-label" for="category_@category.Id">
                                                <strong>@category.Name</strong>
                                                @if (!string.IsNullOrEmpty(category.Description))
                                                {
                                                    <br><small class="text-muted">@category.Description</small>
                                                }
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            
                            @if (ViewBag.Categories == null || ((List<Category>)ViewBag.Categories).Count == 0)
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <strong>Nenhuma categoria encontrada!</strong>
                                    <br>Voc√™ precisa criar categorias antes de criar workouts.
                                    <br><a href="/Categories" class="btn btn-sm btn-primary mt-2">Criar Categorias</a>
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Salvar Workout
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function selectAllCategories() {
            document.querySelectorAll('.category-checkbox').forEach(checkbox => {
                checkbox.checked = true;
            });
        }
        
        function deselectAllCategories() {
            document.querySelectorAll('.category-checkbox').forEach(checkbox => {
                checkbox.checked = false;
            });
        }
    </script>
} 